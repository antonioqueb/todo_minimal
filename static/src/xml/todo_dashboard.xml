<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="todo_app.Dashboard">
        <div class="o_action todo_dashboard p-4 bg-100">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fa fa-check-square-o me-2"/>Todo Dashboard
                </h2>
                <div>
                    <button class="btn btn-primary me-2" t-on-click="createQuickTask">
                        <i class="fa fa-plus me-1"/>Nueva Tarea
                    </button>
                    <button class="btn btn-secondary" t-on-click="refresh">
                        <i class="fa fa-refresh"/>
                    </button>
                </div>
            </div>

            <t t-if="state.loading">
                <div class="text-center p-5">
                    <i class="fa fa-spinner fa-spin fa-3x"/>
                    <p class="mt-3">Cargando...</p>
                </div>
            </t>

            <t t-else="">
                <!-- KPI Cards -->
                <div class="row g-3 mb-4">
                    <!-- Total -->
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0" style="cursor:pointer" t-on-click="() => this.openTasks([])">
                            <div class="card-body text-center">
                                <div class="text-muted text-uppercase small">Total Tareas</div>
                                <div class="display-4 fw-bold text-primary" t-esc="state.total"/>
                                <i class="fa fa-list fa-2x text-primary opacity-25 mt-2"/>
                            </div>
                        </div>
                    </div>
                    <!-- Pendientes -->
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0 border-start border-warning border-4" style="cursor:pointer" t-on-click="openPending">
                            <div class="card-body text-center">
                                <div class="text-muted text-uppercase small">Pendientes</div>
                                <div class="display-4 fw-bold text-warning" t-esc="state.pending"/>
                                <i class="fa fa-clock-o fa-2x text-warning opacity-25 mt-2"/>
                            </div>
                        </div>
                    </div>
                    <!-- Completadas -->
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0 border-start border-success border-4" style="cursor:pointer" t-on-click="openDone">
                            <div class="card-body text-center">
                                <div class="text-muted text-uppercase small">Completadas</div>
                                <div class="display-4 fw-bold text-success" t-esc="state.done"/>
                                <i class="fa fa-check-circle fa-2x text-success opacity-25 mt-2"/>
                            </div>
                        </div>
                    </div>
                    <!-- Alta Prioridad -->
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0 border-start border-danger border-4" style="cursor:pointer" t-on-click="openHighPriority">
                            <div class="card-body text-center">
                                <div class="text-muted text-uppercase small">Alta Prioridad</div>
                                <div class="display-4 fw-bold text-danger" t-esc="state.by_priority.alta"/>
                                <i class="fa fa-exclamation-triangle fa-2x text-danger opacity-25 mt-2"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Segunda fila: GrÃ¡fico + Progress -->
                <div class="row g-3">
                    <!-- Chart -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-white border-0">
                                <h5 class="mb-0"><i class="fa fa-pie-chart me-2"/>Por Prioridad</h5>
                            </div>
                            <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 250px;">
                                <canvas id="priorityChart" style="max-height: 220px;"/>
                            </div>
                        </div>
                    </div>

                    <!-- Progress + Celebrate -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-white border-0">
                                <h5 class="mb-0"><i class="fa fa-trophy me-2"/>Progreso General</h5>
                            </div>
                            <div class="card-body d-flex flex-column justify-content-center">
                                <div class="text-center mb-3">
                                    <span class="display-3 fw-bold" t-attf-class="#{state.completion_rate >= 100 ? 'text-success' : 'text-primary'}">
                                        <t t-esc="state.completion_rate"/>%
                                    </span>
                                    <p class="text-muted">de tareas completadas</p>
                                </div>
                                
                                <div class="progress mb-4" style="height: 25px;">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                                         role="progressbar"
                                         t-attf-style="width: #{state.completion_rate}%"
                                         t-attf-class="#{state.completion_rate >= 100 ? 'bg-success' : (state.completion_rate >= 50 ? 'bg-info' : 'bg-warning')}"
                                         t-att-aria-valuenow="state.completion_rate"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                    </div>
                                </div>

                                <t t-if="state.completion_rate >= 100">
                                    <button class="btn btn-success btn-lg w-100" t-on-click="celebrate">
                                        <i class="fa fa-gift me-2"/>Â¡Celebrar! ðŸŽ‰
                                    </button>
                                </t>
                                <t t-else="">
                                    <p class="text-center text-muted mb-0">
                                        <i class="fa fa-info-circle me-1"/>
                                        Completa todas las tareas para celebrar
                                    </p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>